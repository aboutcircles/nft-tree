{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",
    "resolveJsonModule": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "outDir": "dist",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"],
  "ts-node": { "esm": true }
}
